{
  "name": "rb-electron-test",
  "version": "1.1.0",
  "description": "Resource Monitor",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec \"electron .\"",
    "reset": "git reset --hard",
    "build": "electron-builder -w",
    "release": "electron-builder -w -p onTagOrDraft",
    "win-cert": "electron-builder create-self-signed-cert -p statsperform"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ptaucher/rb-electron-test.git"
  },
  "homepage": "https://github.com/ptaucher/rb-electron-test",
  "keywords": [
    "Electron",
    "Demo",
    "Example",
    "Resource",
    "CPU",
    "Monitor"
  ],
  "author": "Peter Taucher",
  "license": "CC BY",
  "devDependencies": {
    "electron": "^5.0.10",
    "electron-builder": "^22.1.0",
    "nodemon": "^1.19.2"
  },
  "dependencies": {
    "chart.js": "^2.9.2",
    "electron-log": "^3.0.8",
    "electron-updater": "^4.2.0",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.statsperform.electron-test",
    "copyright": "Copyright 2019 StatsPerform",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "certificateFile": "private/statsperform.pfx",
      "certificatePassword": "",
      "verifyUpdateCodeSignature": false,
      "publisherName": "statsperform"
    },
    "linux": {
      "category": "Utility"
    }
  },
  "bugs": {
    "url": "https://github.com/ptaucher/rb-electron-test/issues"
  }
}
