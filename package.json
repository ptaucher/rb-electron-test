{
  "name": "rb-electron-test",
  "version": "1.0.0",
  "description": "Test project for mastering electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec \"electron .\"",
    "reset": "git reset --hard",
    "build": "electron-builder -w",
    "win-cert": "electron-builder create-self-signed-cert -p statsperform"
  },
  "repository": "https://github.com/ptaucher/rb-electron-test",
  "homepage": "https://github.com/ptaucher/rb-electron-test",
  "keywords": [
    "Electron",
    "Demo",
    "Example"
  ],
  "author": "Peter Taucher",
  "license": "CC BY",
  "devDependencies": {
    "electron": "^5.0.10",
    "electron-builder": "^22.1.0",
    "nodemon": "^1.19.2"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.statsperform.electron-test",
    "copyright": "Copyright 2019 StatsPerform",
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg"
    },
    "win": {
      "certificateFile": "private/statsperform.pfx",
      "verifyUpdateCodeSignature": false,
      "publisherName": "statsperform"
    },
    "linux": {
      "category": "Utility"
    }
  }
}
